generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model productos {
  id Int @id @default(autoincrement())
  nombre String @unique
  precio Float 
  stock Int 
  fecha_registro DateTime @default(now())
  categoriaId Int
  categoria Categoria @relation(fields: [categoriaId], references: [id])
}

model Categoria{
 id Int @id @default(autoincrement())
 nombre String @unique
 productos productos[]
}

